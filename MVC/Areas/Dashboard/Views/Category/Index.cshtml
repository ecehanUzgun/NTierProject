@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_Dashboard.cshtml";
}

<div class="col-md-9 mx-auto">
    <div class="row">
        <div class="col-md-3 ms-auto">
            <a asp-action="Create" asp-controller="Category" asp-area="Dashboard" class="btn btn-sm btn-success mt-2">New Category</a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Category Name</th>
                    <th>Category Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Delete" asp-controller="Category" asp-area="Dashboard" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>
                            <a asp-action="Update" asp-controller="Category" asp-area="Dashboard" asp-route-id="@item.ID" class="btn btn-warning">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


